<svg width="{{ .LayoutCfg.CardWidth }}"
     height="{{ .LayoutCfg.CardHeight }}"
     viewBox="0 0 {{ .LayoutCfg.CardWidth }} {{ .LayoutCfg.CardHeight }}"
     xmlns="http://www.w3.org/2000/svg">
    <style>
        {{ .Stylesheet }}
    </style>

    <rect x="{{ .PosX }}"
          y="{{ .PosY }}"
          width="{{ .Width }}"
          height="{{ .Height }}"
          rx="{{ .LayoutCfg.BorderRadius }}"
          stroke-width="{{ .LayoutCfg.StrokeWidth }}"
          fill="{{ .Colours.CardFill.Hex }}"
          stroke="{{ .Colours.CardStroke.Hex }}"/>

    <g class="card-contents">
        {{ range .Partials }}
            {{ . }}
        {{ end}}
    </g>
</svg>
